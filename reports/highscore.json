{
  "color": "blue",
  "title": "Highscore (TOP {limit})",
  "description": "_{server_name}_",
  "input": [
    {
      "name": "period",
      "range": ["", "day", "month", "week", "year"]
    },
    {
      "name": "limit",
      "default": 3
    }
  ],
  "pagination": {
    "param": {
      "name": "server_name",
      "sql": "SELECT DISTINCT server_name FROM missions"
    }
  },
  "elements": [
    {
      "type": "Graph",
      "params": {
        "width": 15,
        "height": 20,
        "cols": 2,
        "rows": 4,
        "elements":
         [
            {
              "class": "plugins.userstats.highscore.HighscorePlaytime",
              "params": { "col": 0, "row": 0, "colspan": 2 }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 0, "row": 1, "kill_type": "Air Targets" }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 1, "row": 1, "kill_type": "Ships" }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 0, "row": 2, "kill_type": "Air Defence" }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 1, "row": 2, "kill_type": "Ground Targets" }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 0, "row": 3, "kill_type": "Most Efficient Killers" }
            },
            {
              "class": "plugins.userstats.highscore.HighscoreElement",
              "params": { "col": 1, "row": 3, "kill_type": "Most Wasteful Pilots" }
            }
         ]
      }
    }
  ]
}