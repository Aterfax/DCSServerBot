{
  "color": "blue",
  "title": "Server Load ({period})",
  "description": "Host: {agent_host}",
  "input": [
    {
      "name": "period",
      "range": ["", "hour", "day", "week"],
      "default": "hour"
    },
    {
      "name": "ruler_length",
      "value": 27
    }
  ],
  "pagination":
  {
    "param":
    {
      "name": "agent_host",
      "sql": "SELECT DISTINCT agent_host FROM serverstats"
    }
  },
  "elements":
  [
    {
      "type": "Graph",
      "params":
      {
        "width": 15,
        "height": 10,
        "cols": 1,
        "rows": 4,
        "elements":
         [
            {
              "class": "plugins.serverstats.serverstats.ServerLoad",
              "params": [
                { "row": 0, "col": 0 },
                { "row": 1, "col": 0 },
                { "row": 2, "col": 0 },
                { "row": 3, "col": 0 }
              ]
            }
         ]
      }
    }
  ]
}